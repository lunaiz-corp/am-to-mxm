{
  "name": "@apps/backend",
  "private": true,
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "tsx watch src/index",
    "build": "tsup src/index.ts",
    "lint": "eslint --ignore-path ../../.gitignore --cache --cache-location ./node_modules/.cache/eslint src/"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.4.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "sourcemap": true,
    "treeshake": true,
    "clean": true,
    "minify": true,
    "dts": true
  },
  "dependencies": {
    "@trpc/server": "11.0.0-rc.544"
  }
}
