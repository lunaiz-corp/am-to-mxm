{
  "name": "@apps/backend",
  "private": true,
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "tsx watch src/index",
    "build": "tsup src/index.ts",
    "lint": "eslint --ignore-path ../../.gitignore --cache --cache-location ./node_modules/.cache/eslint src/"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.3",
    "@keyv/sqlite": "^4.0.1",
    "@packages/grpc": "workspace:^",
    "@types/apple-music-api": "^0.4.4",
    "cache-manager": "^6.1.0",
    "es-toolkit": "^1.22.0",
    "jose": "^5.9.3",
    "keyv": "^5.0.3",
    "tslog": "^4.9.3"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.4.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "sourcemap": true,
    "treeshake": true,
    "clean": true,
    "minify": true,
    "dts": true
  }
}
